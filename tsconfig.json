{
  "compilerOptions": {
    "target": "es2019",    
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}
